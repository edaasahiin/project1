#menu_and_app_controller
def show menu():
	print("=== 📚 Study Tracker ===")
	print("1. Add new study")
	print("2. Viewrecords")
	print("3. Delete all records")
	print("4. Set goal")
	print("5. Check goal")
	print("6. Show achievements")
	print("7. Exit\n")

def main():
	name = input("Enter your name: ")
	print("\n🌸 Hello,", name + "! The program has started.\n"

while True:
	show_menu()
	choice = clean(input("Your choice: ")

	if choice == "1":
		add_study()
	elif choice == "2":
		view_studiies()
	elif choice == "3":
		clear_studies()
	elif choice == "4":
		set_goal()
	elif choice == "5":
		check_goal()
	elif choice == "6":
		show_congrats()
	elif choice == "7":
		print("\n👋🏻 Goodbye,", name + "!")
		print("🌸 Keep going,", name + "! Success loves discipline 💪🏻\n")
		break
	else:
		print("❌ Invalid choice!\n")

main()
